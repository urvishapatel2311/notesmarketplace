@using NotesMarketPlace.Models;
<!DOCTYPE html>
<html>
<head>
    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <title>@ViewBag.Title - NoteMarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon/favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

</head>
<body>
    <!--Header-->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <a class="navbar-brand" href=""><img class="img-fluid" src="~/Content/images/logo/logo.png"></a>
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SearchNote", "user")"><span>Search Notes</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SellYourNote", "user")"><span>Sell Your Notes</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("BuyerRequest", "user")"><span>BuyerRequest</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("FAQ", "user")"><span>FAQ</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ContactUs", "user")"><span>Contact Us</span></a>
                        </li>

                        <div class="dropdown">
                            <a class="nav-link" href="#" id="profile-photo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span>
                                    @if (CommonViewModel.profileViewModel?.profilePicture != null)
                                    {
                                        <img src="@Url.Content(CommonViewModel.profileViewModel.profilePicture)" style=" width: 50px;" alt="User Photo" class="img-responsive img-fluid">
                                    }
                                    else
                                    {
                                        <img src="~/Image/DefaultUserIcon.png" alt="User Photo" class="img-responsive img-fluid">
                                    }
                                    @*<img src="~/Content/images/icon-image/user-img.png" alt="User Photo">*@
                                </span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a class="dropdown-item" href="@Url.Action("UserProfile", "user")">My Profile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyDownload", "user")">My Downloads</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MySoldNotes", "user")">My Sold Notes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyRejectedNote", "user")">My Rejected Notes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "user")">Change Password</a></li>
                                <li class="link-login"><a class="dropdown-item" href="@Url.Action("Logout", "user")"><span>Logout</span></a></li>
                            </ul>
                        </div>


                        <li class="nav-item">
                            <a class="nav-link" id="mynavbtn" href="@Url.Action("Logout", "user")">Logout</a>
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                <a href="@Url.Action("SearchNote", "user")"><span>Search Notes</span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("SellYourNote", "user")"><span>Sell Your Notes</span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("BuyerRequest", "user")"><span>BuyerRequest</span></a>
                            </li>

                            <li>
                                <a href="@Url.Action("FAQ", "user")"><span>FAQ</span></a>
                            </li>

                            <li>
                                <a href="@Url.Action("ContactUs", "user")"><span>Contact Us</span></a>
                            </li>

                            <li>

                                <div class="dropdown nav-dropdown">
                                    <a class="nav-link" href="#" id="profile-photo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>My Account</span></a>
                                    <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenu1">
                                        <li><a class="dropdown-item" href="user_profile.html">My Profile</a></li>
                                        <li><a class="dropdown-item" href="myDownload.html">My Downloads</a></li>
                                        <li><a class="dropdown-item" href="mySoldNotes.html">My Sold Notes</a></li>
                                        <li><a class="dropdown-item" href="myRejectedNote.html">My Rejected Notes</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "user")">Change Password</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "user")">Logout</a></li>
                                    </ul>
                                </div>
                            </li>

                            <li>
                                <button type="submit" class="btn text-center" id="mynavbtn">Login</button>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <!--Header Ends-->
    <div class="body-content">
        @RenderBody()



        <!--Footer-->
        <footer class="border-top">
            <div class="container">
                <div class="footer-content row">
                    <div class="footer-item col-md-6 col-xs-12 col-md-6 col-12">
                        <p>
                            Copyright &copy; Tatvsoft All Rights Reserved By
                        </p>
                    </div>
                    <div class=" footer-item col-md-6 col-xs-12 text-right">
                        <ul class="footer-social-list">
                            <li class="text-center fixed"><a href="#"><img src="~/Content/images/footer/facebook.png"></a></li>
                            <li class="text-center"><a href="#"><img src="~/Content/images/footer/twitter.png"></a></li>
                            <li class="text-center"><a href="#"><img src="~/Content/images/footer/linkedin.png"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <!--Footer Ends-->
    </div>


    <!-- JQuery -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/js/script.js" type="text/javascript"></script>

</body>
</html>
