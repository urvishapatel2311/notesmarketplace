@using NotesMarketPlace.Models;
<!DOCTYPE html>
<html>
<head>
    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <title>@ViewBag.Title - NoteMarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon/favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/adminCss/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/adminCss/responsive.css">

</head>
<body>
    <!--Header-->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">
                <div class="navbar-header">
                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>
                    <!-- Logo -->
                    <a class="navbar-brand" href="@Url.Action("HomePage","user")"><img class="img-fluid" src="~/Content/images/logo/logo.png"></a>
                </div>
                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link" href="@Url.Action("Dashboard", "admin")" id="profile-notes"><span>Dashbord</span></a>

                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link" href="#" id="profile-notes" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Notes</span></a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="@Url.Action("NotesUnderReview", "admin")">Notes Under Review</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("publishedNote", "admin")"><span>Published Notes</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("downloadedNote", "admin")"><span>downloaded Notes</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("rejectedNote", "admin")"><span>Rejected Notes</span></a></li>
                                </ul>
                            </div>
                        </li>
                        <li> <a class="nav-link" href="@Url.Action("members", "admin")" id="profile-notes"><span>Members</span></a></li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link" href="#" id="profile-reports" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Reports</span></a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="@Url.Action("spamReport", "admin")"><span>Spam Reports</span></a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link" href="#" id="profile-settings" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Settings</span></a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="@Url.Action("manageSystemConfiguration", "admin")"><span>Manage System Configuration</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("manageAdministrator", "admin")"><span>Manage Administrator</span></a></li>
                                    <li> <a class="dropdown-item" href="@Url.Action("manageCategory", "admin")"><span>Manage Category</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("manageType", "admin")"><span>Manage Type</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("manageCountry", "admin")"><span>Manage Countries</span></a></li>
                                </ul>
                            </div>
                        </li>
                        <div class="dropdown">
                            <a class="nav-link" href="#" id="profile-photo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @if (CommonViewModel.profileViewModel?.profilePicture != null)
                                {
                                    <img src="@Url.Content(CommonViewModel.profileViewModel.profilePicture)" style=" width: 50px; border-radius:50%;" alt="User Photo" class="img-responsive">
                                }
                                else
                                {
                                    <img src="@Url.Content(CommonViewModel.configViewModel.defaultProfilePicture)" style=" width: 50px; border-radius:50%;" alt="User Photo" class="img-responsive">
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="@Url.Action("myProfile", "admin")"><span>Update Profile</span></a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "user")"><span>Change Password</span></a></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "user")">
                                        <span>
                                            <h6>Logout</h6>
                                        </span>
                                    </a>

                                </li>
                            </ul>
                        </div>
                        <li class="nav-item">
                            <a class="nav-link" id="mynavbtn" href="@Url.Action("Logout", "user")">Logout</a>
                        </li>
                    </ul>
                </div>
                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>
                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>

                                <a class="nav-link" href="@Url.Action("Dashboard", "admin")" id="profile-notes">Dashboard</a>

                            </li>
                            <div class="dropdown nav-dropdown ">
                                <li>
                                    <a class="nav-link" href="#" id="profile-notes" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notes</a>
                                    <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="@Url.Action("NotesUnderReview", "admin")">Notes Under Review</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("publishedNote", "admin")">Published Notes</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("downloadedNote", "admin")"><span>downloaded Notes</span></a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("rejectedNote", "admin")"><span>Rejected Notes</span></a></li>
                                    </ul>
                                </li>
                            </div>
                            <li> <a class="nav-link" href="@Url.Action("members", "admin")" id="profile-notes">Members</a></li>
                            <li class="nav-item">
                                <div class="dropdown nav-dropdown">
                                    <a class="nav-link" href="#" id="profile-reports" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Reports</span></a>
                                    <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="@Url.Action("spamReport", "admin")"><span>Spam Reports</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown nav-dropdown">
                                    <a class="nav-link" href="#" id="profile-settings" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>
                                    <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="@Url.Action("manageSystemConfiguration", "admin")"><span>Manage System Configuration</span></a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("manageAdministrator", "admin")"><span>Manage Administrator></span></a></li>
                                        <li> <a class="dropdown-item" href="@Url.Action("manageCategory", "admin")"><span>Manage Category</span></a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("manageType", "admin")"><span>Manage Type</span></a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("manageCountry", "admin")"><span>Manage Countries</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a class="nav-link" href="#" id="profile-notes" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">MyAccount</a>
                                <div class="dropdown nav-dropdown">
                                    <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="@Url.Action("myProfile", "admin")"><span>Update Profile</span></a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "user")"><span>Change Password</span></a></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Logout", "user")">
                                                <span>
                                                    <h6>Logout</h6>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <button type="submit" class="btn text-center" id="mynavbtn"><a href="@Url.Action("Logout", "user")">Logout</a></button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!--Header Ends-->
    <div class="body-content">
        @RenderBody()

        <!--Footer-->
        <footer class="footer-class border-top container-fluid">
            <div class="footer-content row">
                <div class="footer-item col-md-6 col-lg-6 col-sm-6 ver">
                    <p>Version: 1.1.24</p>
                </div>
                <div class="footer-item col-md-6 col-md-6 col-lg-6 col-sm-6 text-right">
                    <p>Copyright &copy; Tatvsoft All Rights Reserved.</p>
                </div>
            </div>
        </footer>
        <!--Footer Ends-->
    </div>


    <!-- JQuery -->
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>


    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/js/script.js" type="text/javascript"></script>

</body>
</html>
