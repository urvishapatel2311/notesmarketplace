@model NotesMarketPlace.Models.tblUser
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <!-- title for project -->
    <title>Login - NotesMarketPlace</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

</head>
<body>
    <div id="login">
        <!-- login section -->
        <section id="bg-full">
            <div class="container">

                <!-- LOGO -->
                <div class="row justify-content-center">

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 text-center logo-resize">
                        <img src="~/Content/images/logo/top-logo.png">
                    </div>

                </div>
                <!-- LOGO ends -->
                <!-- Login content -->
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 col-xs-12 col-12">
                        <div class="form_container">
                            <form method="post">
                                <div class="first-line text-center">
                                    <h1>Login</h1>
                                    <p>Enter your email address and password to login</p>
                                </div>
                                <div class="form-content">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        @Html.TextBoxFor(m => m.emailID, new { placeholder = "Enter your emailID", @class = "form-control", id = "email" })
                                        @ViewBag.Message

                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <a href="@Url.Action("forgotPassword", "user")" id="forgot" class="fp">Forgot Password?</a>
                                        @Html.PasswordFor(m => m.password, new { placeholder = "Enter your password", @class = "form-control", id = "password" })
                                        <img src="~/Content/images/login/eye.png" alt="Eye-image" class="eye-image" onclick="pwdVisible()">
                                    </div>
                                    <div class="form-group form-check" id="check">
                                        <input type="checkbox" class="form-check-input" id="check_box">
                                        <label class="form-check-label col-lg-8" id="rememberme">
                                            Remember Me
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                                    <div class="link-for-registration">
                                        <p class="text-center">Don't have an account?<a href="@Url.Action("SignUp", "user")"> Sign Up</a></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Login content ends -->

            </div>
        </section>
        <!-- login section -->
        <!-- JQuery -->
        <script src="~/Scripts/js/jquery.min.js"></script>

        <!-- Bootstrap JS -->
        <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

        <!-- Custom JS -->
        <script src="~/Scripts/js/script.js" type="text/javascript"></script>

    </div>
</body>
</html>
