@model NotesMarketPlace.Models.tblUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <!-- title for project -->
    <title>Forgot Password - NoteMarketPlace</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
</head>
<body>
        <section id="bg-full">

            <div class="container">

                <div class="row justify-content-center">
                    <div class="col-md-12 text-center logo-resize">
                        <img src="~/Content/images/logo/top-logo.png">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 col-xs-12 col-12">
                        <div class="form_container">
                            <form method="post">
                                <div class="first-line text-center">
                                    <h1>Forgot Password?</h1>
                                    <p>Enter your email to reset your password</p>
                                </div>
                                <div class="form-content">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        @Html.TextBoxFor(m => m.emailID, new { @placeholder = "Enter your email", @class = "form-control", @id = "email" })
                                        @Html.ValidationMessageFor(model => model.emailID, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </section>
        <!-- JQuery -->
        <script src="~/Scripts/js/jquery.min.js"></script>

        <!-- Bootstrap JS -->
        <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

        <!-- Custom JS -->
        <script src="~/Scripts/js/script.js" type="text/javascript"></script>

</body>
</html>
