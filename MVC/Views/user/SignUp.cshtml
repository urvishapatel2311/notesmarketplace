@model NotesMarketPlace.Models.tblUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign Up";
}

<div id="signup">
    <section id="bg-full">

        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-12 text-center">
                    <img src="~/Content/images/logo/top-logo.png">
                </div>
            </div>

            <div class="row justify-content-center logo-resize">
                <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-xs-12 col-12">
                    <div class="form_container">
                        <form method="post">
                            <div class="first-line text-center">
                                <h1>Create An Account</h1>
                                <p>Enter your details to Signup</p>
                            </div>
                            <div id="register_status">
                                <p>
                                    @if (ViewBag.error != null)
                                    {
                                        <span class="badge badge-danger">@ViewBag.error</span>
                                    }
                                </p>
                            </div>
                            <div class="form-content">
                                <div class="form-group">
                                    <label for="fname">First Name *</label>
                                    @Html.TextBoxFor(m => m.firstName, new { placeholder = "Enter your first name", @class = "form-control", id = "fname" })
                                    @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="lname">Last Name *</label>
                                    @Html.TextBoxFor(m => m.lastName, new { placeholder = "Enter your last name", @class = "form-control", id = "lname" })
                                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="email">Email *</label>
                                    @Html.TextBoxFor(m => m.emailID, new { placeholder = "Enter your emailID", @class = "form-control", id = "email" })
                                    @Html.ValidationMessageFor(model => model.emailID, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    @Html.PasswordFor(m => m.password, new { placeholder = "Enter your password", @class = "form-control", id = "password" })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                                    <img src="~/Content/images/login/eye.png" alt="Eye-image" class="eye-image" onclick="changeVisible(this)">
                                </div>
                                <div class="form-group">
                                    <label for="cnfmpwd">Confirm Password</label><div id="divCheckPassword"></div>
                                    @Html.PasswordFor(m => m.Confirmpassword, new { placeholder = "Re-enter your password", @class = "form-control", id = "cnfmpwd" })
                                    @Html.ValidationMessageFor(model => model.Confirmpassword, "", new { @class = "text-danger" })
                                    <img src="~/Content/images/login/eye.png" alt="Eye-image" class="eye-image" onclick="changeVisible(this)">
                                </div>
                                <button type="submit" class="btn  btn-block">Sign Up</button>
                                <div class="link-for-registration">
                                    <p class="text-center">Already have an account?<a href="@Url.Action("Login", "user")"> Login</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </section>
</div>
