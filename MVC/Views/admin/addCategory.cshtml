@model NotesMarketPlace.Models.tblManageNoteCategory

@{
    Layout = "~/Views/Shared/_AdminAfterLoginLayout.cshtml";

    ViewBag.Title = "Add Category";
}

<section id="addcatogory" class="fixheight">
    <div class="content-box-md">
        <div class="container">
            <!-- General heading -->
            <div class="general-heading">
                <h3>Add Category</h3>
            </div>
            <div class="admin-p">
                <div class="row">
                    <div class="col-md-8 col-lg-8 col-xl-8  ">
                        <form method="post">
                            <div class="form-content">
                                <div class="form-group">
                                    <label for="cname">Category Name *</label>
                                    @Html.TextBoxFor(m => m.categoryName, new { placeholder = "Enter your category name", @class = "form-control desc-input", @id = "cname" })
                                    @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="desc">Description *</label>
                                    @Html.TextBoxFor(m => m.description, new { placeholder = "Enter your description", @class = "form-control desc-input", @id = "desc" })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button id="btn-admin-p" type="submit" class="btn btn-primary btn-block" name="command" value="update">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

